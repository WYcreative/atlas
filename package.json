{
	"name": "@wycreative/design-guide",
	"version": "0.0.0",
	"description": "The WYcreative Design Guide",
	"author": "WYcreative Engineering Team",
	"license": "ISC",
	"type": "module",
	"exports": "./scripts/index.js",
	"files": [
		"./config/index.js",
		"./dist",
		"./scripts",
		"./src/views"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/WYcreative/design-guide.git"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"engines": {
		"node": ">=18",
		"npm": ">=8.6"
	},
	"scripts": {
		"start": "gulp",
		"serve": "gulp serve",
		"test": "xo",
		"dist": "gulp dist",
		"clean": "gulp clean",
		"prepublishOnly": "gulp deploy",
		"release": "np"
	},
	"dependencies": {
		"@wycreative/team": "^1.2.2",
		"browserslist": "^4.21.1",
		"globby": "^13.1.2",
		"pug": "^3.0.2"
	},
	"devDependencies": {
		"@babel/core": "^7.18.5",
		"@babel/preset-env": "^7.18.2",
		"browser-sync": "^2.27.10",
		"cssnano": "^5.1.12",
		"del": "^6.1.1",
		"gulp": "^4.0.2",
		"gulp-babel": "^8.0.0",
		"gulp-imagemin": "^8.0.0",
		"gulp-plumber": "^1.2.1",
		"gulp-postcss": "^9.0.1",
		"gulp-rename": "^2.0.0",
		"gulp-sass": "^5.1.0",
		"gulp-svgstore": "^9.0.0",
		"gulp-uglify-es": "^3.0.0",
		"np": "^7.6.2",
		"postcss": "^8.4.14",
		"postcss-preset-env": "^7.7.1",
		"sass": "^1.53.0",
		"xo": "^0.50.0"
	},
	"browserslist": [
		"defaults",
		"not IE 11"
	],
	"babel": {
		"presets": [
			[
				"@babel/env",
				{
					"modules": false
				}
			]
		],
		"only": [
			"./src/**"
		]
	},
	"xo": {
		"envs": [
			"browser",
			"node"
		],
		"rules": {
			"no-multiple-empty-lines": [
				1,
				{
					"max": 3
				}
			]
		}
	},
	"np": {
		"message": "DIST - v%s"
	}
}
