extends ../_layout/base
include ../_components/link-copy

block variables
	- titlePage = 'Module Example'
	- isFull = true

block append styles
	link(href="/styles/module-example.css" rel="stylesheet")

block main
	section.module.module-title-text.module--alph
		.container
			h1.heading-1= 'module-' + data.modules.list[0].id
			h2.heading-2
				img(src="../../assets/images/shapes/green.svg" width="24" height="24")
				= data.modules.list[0].name
			.rte
				p= data.modules.list[0].description

	section.module.module-links.module--alph
		.container
			h3.heading-3
				img(src="../../assets/images/shapes/blue.svg" width="24" height="24")
				| Info
			.module-links__row
				.module-links__column
					h4.heading-4 Design
					+link-copy(data.modules.list[0].url.design, "Figma")
					+link-copy(data.modules.list[0].url.prototype.desktop, "Invision Desktop")
					+link-copy(data.modules.list[0].url.prototype.mobile, "Invision Mobile")
					+link-copy(data.modules.list[0].url.task, "AC")
				.module-links__column
					h4.heading-4 Status
						case data.modules.list[0].status
							when 'done'
								- emoji = 'icon-emoji-satisfied'
							when 'wip'
								- emoji = 'icon-emoji-sad'
							default
								- emoji = 'icon-emoji-sad'
					span.icon(class=emoji)
						+symbol(emoji)
						= data.modules.list[0].status
				.module-links__column
					h4.heading-4 External Link
					+link-copy(data.modules.path+data.modules.list[0].id, "External")

	section.module.module-detail-info.module--alph
		.container
			h3.heading-3
				img(src="../../assets/images/shapes/orange.svg" width="24" height="24")
				| Components
			h3.heading-3
				img(src="../../assets/images/shapes/purple.svg" width="24" height="24")
				| Code
			h3.heading-3
				img(src="../../assets/images/shapes/yellow.svg" width="24" height="24")
				| Data
			h3.heading-3
				img(src="../../assets/images/shapes/green.svg" width="24" height="24")
				| Additional Notes

	section.module.module-iframe.module--alph
		.container
			iframe(width='800', height='1000', src=data.modules.path+data.modules.list[0].id)
