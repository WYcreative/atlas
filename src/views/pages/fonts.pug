extends ../_layout/base
include ../_abstracts/mixins/symbol

block variables
	- titlePage = 'Tokens - Typography'

block append styles
	link(href="/styles/fonts.css" rel="stylesheet")


block main
	section.module.module-title-text
		.container
			h1.heading-1 < Project Name >
			h2.heading-2
				img(src="../../assets/images/shapes/green.svg" width="24" height="24")
				| Typography
			.rte
				p List of text styles used in this project.

	section.module.module-fonts
		.container
			h3.heading-3
				img(src="../../assets/images/shapes/yellow.svg" width="24" height="24")
				| Gilroy
			div.module-fonts__overflow
				table
					thead
						tr
							th Font Family
							th Font Size
							th Line Height
							th Letter Spacing
							th Weight
							th Style
