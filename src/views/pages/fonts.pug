						tr
							td
								span Gilroy
							td
								span.only-desktop 52px
								span.only-mobile 48px
							td
								span.only-desktop 56px
								span.only-mobile 52px
							td
								span.only-desktop 0px
								span.only-mobile 0px
							td
								span 600
							td
								span Display-1
						tr
							td
								span Gilroy
							td
								span.only-desktop 50px
