extends ../_layout/base
include ../_components/link-copy

block variables
	- titlePage = 'Template Example'
	- isFull = true

block append styles
	link(href="/styles/template-example.css" rel="stylesheet")

block main
	- const template = data.templates.list.find(({id}) => id === current)

	section.module.module-title-text.module--half
		.container
			h1.heading-1= template.id
			h2.heading-2
				img(src="../../assets/images/shapes/green.svg" width="24" height="24")
				= template.name
			.rte
				p= template.description

	section.module.module-links.module--half
		.container
			h3.heading-3
				img(src="../../assets/images/shapes/blue.svg" width="24" height="24")
				| Info
			.module-links__row
				.module-links__column
					h4.heading-4 Design
					if template.url
						if template.url.design
							+link-copy(template.url.design, "Figma")
						if template.url.prototype
							if template.url.prototype.desktop
								+link-copy(template.url.prototype.desktop, "Invision Desktop")
							if template.url.prototype.mobile
								+link-copy(template.url.prototype.mobile, "Invision Mobile")
						if template.url.task
							+link-copy(template.url.task, "AC")
				.module-links__column
					h4.heading-4 Status
						case template.status
							when 'done'
								- emoji = 'icon-emoji-satisfied'
							when 'wip'
								- emoji = 'icon-emoji-sad'
							default
								- emoji = 'icon-emoji-sad'
					span.icon(class=emoji)
						+symbol(emoji)
						= template.status
				.module-links__column
					h4.heading-4 External Link
					+link-copy(data.templates.path+template.id, "External")

	section.module.module-detail-info.module--half
		.container
			h3.heading-3
				img(src="../../assets/images/shapes/orange.svg" width="24" height="24")
				| Components

	section.module.module-detail-info.module--half
		.container
			h3.heading-3
				img(src="../../assets/images/shapes/yellow.svg" width="24" height="24")
				| Additional Notes

	section.module.module-iframe
		.container
			iframe(width='800', height='1000', src=data.templates.path+template.id+'.html')
