include ../_abstracts/mixins/symbol

mixin sidebar
	header.sidebar.js-slidebar
		button.sidebar__hamburger.js-btnBurger(type="button")
			span.sidebar__hamburger-box
				span.sidebar__hamburger-inner

		a.sidebar__logo-link(href="")
			img.sidebar__logo(src="../assets/images/logo-wycreative.png" alt="Logo Client")
		//-label.sidebar__search(for="search")
			input.sidebar__search-input(type="text" placeholder="Search")
		nav
			ul.sidebar__menu
				li.sidebar__list-item
					a.sidebar__page-name(href="#")
						span.sidebar__page-name-wrapper-icon
							span.icon.icon-chevron
								+symbol('icon-list')
							| Overview
				li.sidebar__list-item
					a.sidebar__page-name(href="#")
						span.sidebar__page-name-wrapper-icon
							span.icon.icon-chevron
								+symbol('icon-font')
							| Tokens
					button.sidebar__dropdown-button.js-toggleSubMenu
						span.icon.icon-chevron
							+symbol('icon-chevron')
					ul.sidebar__submenu
						li
							a(href="") Colors
						li
							a(href="") Sizes
						li
							a(href="") Typography
						li
							a(href="") Icons
				li.sidebar__list-item
					a.sidebar__page-name(href="#")
						span.sidebar__page-name-wrapper-icon
							span.icon.icon-chevron
								+symbol('icon-box')
							| Component
						button.sidebar__dropdown-button.js-toggleSubMenu
							span.icon.icon-chevron
								+symbol('icon-chevron')
					ul.sidebar__submenu
						each component in data.components.list
							li
								a(href="")= component.name
				li.sidebar__list-item
					a.sidebar__page-name(href="#")
						span.sidebar__page-name-wrapper-icon
							span.icon.icon-chevron
								+symbol('icon-view')
							| Modules
						button.sidebar__dropdown-button.js-toggleSubMenu
							span.icon.icon-chevron
								+symbol('icon-chevron')
					ul.sidebar__submenu
						each modules in data.modules.list
							li
								a(href="")= modules.name
				li.sidebar__list-item
					a.sidebar__page-name(href="#")
						span.sidebar__page-name-wrapper-icon
							span.icon.icon-chevron
								+symbol('icon-view')
							| Templates
						button.sidebar__dropdown-button.js-toggleSubMenu
							span.icon.icon-chevron
								+symbol('icon-chevron')
					ul.sidebar__submenu
						each templates in data.templates.list
							li
								a(href="")= templates.name

		a.sidebar__logo-wycreative(href="https://wycreative.com/" target="_blank")
			img(src="../assets/images/logo-wycreative.png" alt="Logo WYcreative")
