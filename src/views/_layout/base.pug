include ../_abstracts/index
include ../_layout/sidebar

-
	let titlePage = '';

block variables

doctype html
html
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover")
		title= titlePage + (titlePage.length > 0 ? ' | ' : '') + 'WYcreative - Design Guide'
		block styles
			link(href="/assets/styles/main.css" rel="stylesheet")
		block scripts-head

	body
		+sidebar
		main
			block main

	block scripts
		script(src="/assets/scripts/main.js" type="module")
