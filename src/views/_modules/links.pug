include ../_components/link-copy

mixin links(ishalf)
	section.module.module-links(class=(ishalf ? 'module--half' : null))
		.container
			h3.heading-3
				img(src="../../assets/images/shapes/blue.svg" width="24" height="24")
				| Links
			.module-links__row
				.module-links__column
					h4.heading-4 Design
					+link-copy(data.url.design, "Figma")
					+link-copy(data.url.prototype.desktop, "Invision Desktop")
					+link-copy(data.url.prototype.mobile, "Invision Mobile")
				.module-links__column
					h4.heading-4 Development
					+link-copy(data.url.repository, "Repository")
					+link-copy(data.url.dev, "DEV")
					+link-copy(data.url.stage, "STAGE")
					+link-copy(data.url.prod, "PROD")
